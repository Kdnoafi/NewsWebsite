<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>articles.jsp</servlet-name>
        <jsp-file>/articles.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>articles.jsp</servlet-name>
        <url-pattern>/articles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>edit-article.jsp</servlet-name>
        <jsp-file>/edit-article.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit-article.jsp</servlet-name>
        <url-pattern>/editArticle/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>users.jsp</servlet-name>
        <jsp-file>/users.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>users.jsp</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>edit-user.jsp</servlet-name>
        <jsp-file>/edit-user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit-user.jsp</servlet-name>
        <url-pattern>/editUser/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>single-article.jsp</servlet-name>
        <jsp-file>/single-article.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>single-article.jsp</servlet-name>
        <url-pattern>/singleArticle/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>categories.jsp</servlet-name>
        <jsp-file>/categories.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>categories.jsp</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>edit-category.jsp</servlet-name>
        <jsp-file>/edit-category.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit-category.jsp</servlet-name>
        <url-pattern>/editCategory/*</url-pattern>
    </servlet-mapping>

